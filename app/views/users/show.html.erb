



<div id="show" class="container tweet-list">

  <h3 class="text-center"> <%= @user.username %> 's Tweets</h3>
  <div id = "select-id" style="display: none"> <%= params[:id] %> </div>
  <div id = "current-user-id" style="display: none"> <%= current_user.id %> </div>
  <button class="btn btn-primary follow-btn" @click="follow"> click to follow </button>
  <!-- <button id="unfollow-btn" @click="unfollow"> followed </button> -->
      <ul class="list-group" v-for="tweet in tweets">
        <li class="list-group-item tweet-row">{{ tweet.content }}</li>
      </ul>
  <div id="following_users" style="display: none;"> <%= current_user.following_users %> </div>

</div>

