

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div id="show" class="tweet-list">
        <h3 class="text-center"> <%= @user.username %> 's Tweets</h3>
        <button class="btn btn-primary follow-btn text-center" style="margin: auto;" @click="follow"> click to follow/unfollow </button>
        <ul class="list-group" v-for="tweet in tweets" style="margin-top: 20px">
          <li class="list-group-item tweet-row">{{ tweet.content }}</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id = "select-id" style="display: none"> <%= params[:id] %> </div>
<div id = "current-user-id" style="display: none"> <%= current_user.id %> </div>
<div id="following_users" style="display: none;"> <%= current_user.following_users %> </div>


